<div class="content">
  <div class="text-box">
    <p class="main-text" id="text-to-type">Start Typing to Begin!</p>
  </div>

  <div class="stats-box">
    <p class="stat" id="timer">Time: 0</p>
    <p class="stat" id="score">Score: 0</p>
  </div>

  <div class="modal-backdrop" id="game-over-background"></div>
  <div class="modal" id="game-over-box">
    <div class="modal-content">
      <p class="main-text" id="game-over-message"></p>
      <div class="score-submit">
        <p>Would you like to save your score?</p>
        <div class="leaderboard-submit">
          <button type="button" id="submit-score-btn">Save Score</button>
        </div>
      </div>
    </div>
    <div class="restart-and-home">
      <button type="button" class="restart-btn" id="game-over-restart-btn">Restart</button>
      <button type="button" class="home-btn" id="game-over-home-btn">Home</button>
    </div>
  </div>

  <input class="user-input" type="text" id="user-input" placeholder="Type Here!" autocomplete="off">

  <div class="game-button-container">
    <button type="button" class="restart-btn" id='restart-btn'>Restart</button>
    <button type="button" class="home-btn" id="home-btn">Home</button>
  </div>
</div>
<script src="/game.js"></script>