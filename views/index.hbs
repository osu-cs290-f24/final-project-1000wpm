<div class="content">
  <div class="text-box">
    <p class="main-text" id="text-to-type">Start Typing to Begin!</p>
  </div>

  <div class="stats-box">
    <p class="stat" id="timer">Time: 0</p>
    <p class="stat" id="score">Score: 0</p>
  </div>

  <div class="modal-backdrop" id="game-over-background"></div>
  <div class="modal" id="game-over-box">
    <div class="modal-content" id="game-over-message">
      <p class="main-text" id="game-over-message"></p>
    </div>
    <button type="button" id="game-over-restart-btn">Restart</button>
  </div>

  <input class="user-input" type="text" id="user-input" placeholder="Type Here!" autocomplete="off">

  <button type="button" id='restart-btn'>Restart</button>
</div>
<script src="/game.js"></script>

